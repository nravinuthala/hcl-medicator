@model hcl_medicator.Models.ImageModel

@{
    ViewBag.Title = "Prescription Image";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Add Prescription Image</title>

</head>
<body>
    <div class="container mt-5">
        <h2 class="text-center fw-bold">Upload Prescription Image</h2>
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-sm p-4">
                    <hr />
                    @using (Html.BeginForm("SendFileToApi", "Image", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        <dl class="row">
                            <dt class="col-sm-4 fw-bold">
                                Image
                            </dt>
                            <dd class="col-sm-8">
                                <input type="file" name="UploadedFile" class="form-control" />
                            </dd>
                            <dt class="col-sm-4 fw-bold">
                                text
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.text)

                                @Html.ActionLink("Add Prescription", "savePrescriptionImage","Prescription", new { text = Model.text , path = Model.filePath}, new { @class = "btn btn-outline-warning btn-sm" })
                            </dd>
                        </dl>
                        <div class="text-center mt-4">
                            <input type="submit" value="Upload" class="btn btn-outline-success" />
                            @Html.ActionLink("Back to List", "ViewAll", "Prescription", null, new { @class = "btn btn-outline-success ml-2" })
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</body>
</html>
