@model hcl_medicator.Models.ProductModel

@{
    ViewBag.Title = "Product Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Latest Bootstrap CSS -->
<link href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css" rel="stylesheet" />


<div class="container mt-5">
    <h1 class="text-center fw-bold">Product Details</h1>
    <div class="row">
        <div class="col-lg-6 offset-lg-3">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h2 class="card-title fw-bold">@Model.Name</h2>
                    <p class="card-text"><strong>Product ID:</strong> @Model.ProductID</p>
                    <p class="card-text"><strong>Description:</strong> @Model.Description</p>
                    <p class="card-text"><strong>Price:</strong> @Model.Price</p>
                    <p class="card-text"><strong>Quantity Available:</strong> @Model.QuantityAvailable</p>
                    <p class="card-text"><strong>Seller ID:</strong> @Model.SellerID</p>
                </div>
            </div>
        </div>
    </div>
</div>
