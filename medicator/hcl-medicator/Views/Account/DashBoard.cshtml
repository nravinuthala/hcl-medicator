@model hcl_medicator.Models.DashBoardModel

@{
    ViewBag.Title = "Admin Dashboard";
    Layout = "~/Views/Account/_Layout.cshtml";
}

<!-- Latest Bootstrap CSS -->
<link href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <h2 class="text-center fw-bold">Admin Dashboard</h2>

    <div class="row">
        <!-- Total User Count Card -->
        <div class="col-md-4 mb-4">
            <div class="card text-white bg-secondary h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Total User Count</h5>
                    <p class="card-text display-4">@Model.TotalUserCount</p>
                </div>
            </div>
        </div>

        <!-- Total Customer Count Card -->
        <div class="col-md-4 mb-4">
            <div class="card text-white bg-secondary h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Total Customer Count</h5>
                    <p class="card-text display-4">@Model.TotalCustomerCount</p>
                </div>
            </div>
        </div>

        <!-- Total Seller Count Card -->
        <div class="col-md-4 mb-4">
            <div class="card text-white bg-secondary h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Total Seller Count</h5>
                    <p class="card-text display-4">@Model.TotalSellerCount</p>
                </div>
            </div>
        </div>

        <!-- Total Orders Placed Card -->
        <div class="col-md-4 mb-4">
            <div class="card text-white bg-secondary h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Total Orders Placed</h5>
                    <p class="card-text display-4">@Model.TotalOrdersPlaced</p>
                </div>
            </div>
        </div>

        <!-- Total Orders Delivered Card -->
        <div class="col-md-4 mb-4">
            <div class="card text-white bg-secondary h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Total Orders Delivered</h5>
                    <p class="card-text display-4">@Model.TotalOrdersDelivered</p>
                </div>
            </div>
        </div>

        <!-- Total Products Listed Card -->
        <div class="col-md-4 mb-4">
            <div class="card text-white bg-secondary h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Total Products Listed</h5>
                    <p class="card-text display-4">@Model.TotalProductsListed</p>
                </div>
            </div>
        </div>
    </div>
</div>