@model hcl_medicator.Models.UserModel

@{
    ViewBag.Title = "Delete User";
    Layout = "~/Views/Account/_Layout.cshtml";
}

<!DOCTYPE html>

<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/MyStyle.css" rel="stylesheet" />

<div class="container mt-5">
    <h2>Delete User</h2>
    <div class="alert alert-danger" role="alert">
        <h3>Are you sure you want to delete this User?</h3>
    </div>
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">User Details</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-4">User ID</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.UserID)</dd>

                <dt class="col-sm-4">UserName</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Username)</dd>

                <dt class="col-sm-4">Email</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>

                <dt class="col-sm-4">User Type</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.UserType)</dd>
            </dl>
        </div>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-group mt-3">
            <input type="submit" value="Delete" class="btn btn-danger" />
            @Html.ActionLink("Back to List", "ViewUsers", null, new { @class = "btn btn-secondary ml-2" })
        </div>
    }
</div>