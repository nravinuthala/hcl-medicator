
@model hcl_medicator.Models.UserModel

@{
    ViewBag.Title = "Customer Home";
}

<!-- Latest Bootstrap CSS -->
<link href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/MyStyle.css" rel="stylesheet" />

<div class="container mt-5">
    <h2 class="text-center fw-bold">Start Your Journey with The Medicator!</h2>
    <div class="row justify-content-center mt-4">
        <div class="col-md-6 text-center">
            <div class="btn-group" role="group" aria-label="User Actions">
                @Html.ActionLink("Signup", "CustomerSignup", "Customer", null, new { @class = "btn btn-primary" })
                @Html.ActionLink("Login", "CustomerLogin", "Customer", null, new { @class = "btn btn-secondary" })
            </div>
        </div>
    </div>
</div>
