@{
    ViewBag.Title = "Home Page";
}

<!-- Latest Bootstrap CSS -->
<link href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/MyStyle.css" rel="stylesheet" />

<div class="container mt-5">
    <h2 class="text-center fw-bold">Welcome to Medicator</h2>
    <p class="text-center text-muted">Your trusted source for health and wellness, where quality meets care in every product!</p>

    <div class="d-flex justify-content-center mt-4">
        <div class="btn-group" role="group" aria-label="User Actions">
            @Html.ActionLink("Administrator", "Index", "Account", null, new { @class = "btn btn-outline-primary" })
            @Html.ActionLink("Customer", "Index", "Customer", null, new { @class = "btn btn-outline-secondary" })
            @Html.ActionLink("Seller", "Index", "Seller", null, new { @class = "btn btn-outline-success" })
        </div>
    </div>
</div>