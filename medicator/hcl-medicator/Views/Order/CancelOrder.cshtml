@model hcl_medicator.Models.OrderModel

@{
    ViewBag.Title = "Delete Order";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Latest Bootstrap CSS -->
<link href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <h2 class="fw-bold">Delete Order</h2>
    <div class="alert alert-danger" role="alert">
        <h3>Are you sure you want to Cancel this order?</h3>
    </div>
    <div class="card shadow-sm">
        <div class="card-body">
            <h4 class="card-title fw-bold">Order Details</h4>
            <hr />
            <dl class="row">

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Quantity)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Quantity)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.ProductName)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.ProductName)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.TotalPrice)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.TotalPrice)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Date)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Date)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Status)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Status)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.SellerID)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.SellerID)</dd>
            </dl>
        </div>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-group mt-3">
            <input type="submit" value="Cancel" class="btn btn-outline-danger" />
            @Html.ActionLink("Back to List", "ViewOrders", null, new { @class = "btn btn-outline-secondary ml-2" })
        </div>
    }
</div>
