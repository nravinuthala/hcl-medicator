<!DOCTYPE html>
<html>
<head>
    <!-- Latest Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css" rel="stylesheet" />
    <link id="themeLink" href="~/Content/MyStyle.css" rel="stylesheet" />
    <title>The Medicator</title>
</head>
<body>
    <nav class="navbar navbar-expand-lg bg-dark" data-bs-theme="dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">The Medicator</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        @Html.ActionLink("Home", "Index", "ProductCatalog", null, new { @class = "nav-link" })

                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Prescriptions", "ViewAll", "Prescription", null, new { @class = "nav-link" })
                    </li>

                    <li class="nav-item">
                        @Html.ActionLink("Show Cart", "ShowCart", "ProductCatalog", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("About", "About", "Home", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Contact Us", "Contact", "Home", null, new { @class = "nav-link" })
                    </li>

                </ul>

                <!-- Dropdown Menu -->

                <ul class="navbar-nav">
                    <li class="nav-item">
                        @Html.ActionLink("Chat with The Medicator", "ChatIndex", "Chat", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Hi! @Session["Username"]
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown" style="transform: translateX(-3%); right: 0; left: auto;">
                            <li>@Html.ActionLink("Profile", "CustomerProfile", "Customer", null, new { @class = "dropdown-item" })</li>
                            <li>@Html.ActionLink("Your Orders", "ViewOrders", "Order", null, new { @class = "dropdown-item" })</li>
                            <li><a class="dropdown-item" href="#" id="themeToggle">Switch Theme</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li>@Html.ActionLink("Logout", "Logout", "ProductCatalog", null, new { @class = "dropdown-item" })</li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>

    </nav>

    <div>
        @RenderSection("Scripts", required: false)
        @RenderBody()

    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    @Scripts.Render("~/bundles/jquery")

    <script>
        // Function to toggle the theme
        function toggleTheme() {
            var themeLink = document.getElementById('themeLink');

            if (themeLink.getAttribute('href') === '/Content/MyStyle.css') {
                themeLink.setAttribute('href', '/Content/dark.css');
                // Save the selected theme to local storage
                localStorage.setItem('selectedTheme', 'dark');
            } else {
                themeLink.setAttribute('href', '/Content/MyStyle.css');
                // Save the selected theme to local storage
                localStorage.setItem('selectedTheme', 'light');
            }
        }

        // Check local storage for the selected theme on page load
        document.addEventListener('DOMContentLoaded', function () {
            var selectedTheme = localStorage.getItem('selectedTheme');
            if (selectedTheme === 'dark') {
                // Set the dark theme if it was selected
                toggleTheme();
            }
        });

        document.getElementById('themeToggle').addEventListener('click', toggleTheme);

    </script>
</body>
</html>
