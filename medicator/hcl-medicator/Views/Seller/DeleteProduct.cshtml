@model hcl_medicator.Models.ProductModel

@{
    ViewBag.Title = "Delete Product";
    Layout = "~/Views/Seller/_Layout.cshtml";
}

<!-- Latest Bootstrap CSS -->
<link href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/MyStyle.css" rel="stylesheet" />

<div class="container mt-5">
    <h2 class="fw-bold">Delete Product</h2>
    <div class="alert alert-danger" role="alert">
        <h3>Are you sure you want to delete this product?</h3>
    </div>
    <div class="card shadow-sm">
        <div class="card-body">
            <h4 class="card-title fw-bold">Product Details</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-4">Product ID</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.ProductID)</dd>

                <dt class="col-sm-4">Name</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Name)</dd>

                <dt class="col-sm-4">Description</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Description)</dd>

                <dt class="col-sm-4">Price</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Price)</dd>

                <dt class="col-sm-4">Quantity Available</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.QuantityAvailable)</dd>

            </dl>
        </div>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-group mt-3 text-center">
            <input type="submit" value="Delete" class="btn btn-outline-danger" />
            @Html.ActionLink("Back to List", "ViewAll", null, new { @class = "btn btn-outline-secondary ml-2" })
        </div>
    }
</div>
